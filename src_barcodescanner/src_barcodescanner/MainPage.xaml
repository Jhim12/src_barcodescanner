<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="src_barcodescanner.MainPage"
             Title="Dashboard"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" >

            <Frame BackgroundColor="#49688e" CornerRadius="20" Margin="0,-10,0,0" HeightRequest="60" Grid.Row="0">
                <Grid ColumnDefinitions="*,*,*" VerticalOptions="CenterAndExpand">
                    <Label Grid.Column="1" Grid.Row="0" Text="Welcome" FontAttributes="Bold" FontSize="25" TextColor="White"  ></Label>
                </Grid>
            </Frame>

            <Frame CornerRadius="10" Grid.Row="1" BackgroundColor="#49688e" Margin="10,10,10,0">
                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10">
                    <Label Grid.Column="0" Grid.Row="0" TextColor="#08457E"  FontFamily="" Text="" FontSize="20"  ></Label> <!--Place Icon Here-->
                    <Label Grid.Column="1" Grid.Row="0" Text="Santa Rita College" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    <Label Grid.Column="0" Grid.Row="1" TextColor="#08457E"  FontFamily="" Text="" FontSize="20"  ></Label><!--Place Icon Here-->
                    <Label Grid.Column="1" Grid.Row="1" Text="Barcode" HorizontalTextAlignment="Center" TextColor="White"></Label>
                    <Label Grid.Column="0" Grid.Row="2" TextColor="#08457E"  FontFamily="" Text="" FontSize="20"  ></Label><!--Place Icon Here-->
                    <Label Grid.Column="1" Grid.Row="2" Text="Scanner" HorizontalTextAlignment="Center" TextColor="White"></Label>
                </Grid>
            </Frame>

            <Grid Margin="10" Grid.Row="2" RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10">
                <Frame HeightRequest="75" WidthRequest="200" Grid.Row="0" Grid.Column="0" BackgroundColor="#294a70"  CornerRadius="5" HorizontalOptions="CenterAndExpand">
                    <Button  Text="Add Record" x:Name="AddRecord" BackgroundColor="White" TextColor="Black"   Clicked="AddRecord_Clicked"/>
                </Frame>
                <Frame HeightRequest="75" WidthRequest="200" Grid.Row="0" Grid.Column="1" BackgroundColor="#294a70" HasShadow="True" CornerRadius="5" HorizontalOptions="CenterAndExpand">
                    <Button  Text="Find Record" x:Name="FindRecord" BackgroundColor="White" TextColor="Black"  Clicked="FindRecord_Clicked"/>
                </Frame>
                <Frame HeightRequest="75" WidthRequest="200" Grid.Row="1" Grid.Column="0" BackgroundColor="#294a70" HasShadow="True" CornerRadius="5" HorizontalOptions="CenterAndExpand">
                    <Button  Text="Update Record" x:Name="UpdateRecord" BackgroundColor="White" TextColor="Black"  Clicked="UpdateRecord_Clicked"/>
                </Frame>
                <Frame HeightRequest="75" WidthRequest="200" Grid.Row="1" Grid.Column="1" BackgroundColor="#294a70" HasShadow="True" CornerRadius="5"  HorizontalOptions="CenterAndExpand">
                    <Button  Text="View Records" BackgroundColor="White" TextColor="Black"/>
                </Frame>

            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>
